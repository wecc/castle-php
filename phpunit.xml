<?xml version="1.0" encoding="UTF-8"?>
<phpunit colors="true" bootstrap="tests/Castle.php">
  <testsuites>
    <testsuite name="Test Suite">
      <directory>./tests</directory>
    </testsuite>
  </testsuites>
  <logging>
      <log type="coverage-clover" target="build/logs/clover.xml"/>
  </logging>
  <filter>
      <whitelist processUncoveredFilesFromWhitelist="true">
          <directory suffix=".php">./src/Castle</directory>
          <directory suffix=".php">./src/RestModel</directory>
          <exclude>
            <file>./src/Castle/CookieStore.php</file>
            <file>./src/Castle/CurlTransport.php</file>
          </exclude>
      </whitelist>
  </filter>
</phpunit>
